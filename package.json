{
  "name": "jogabilidadejs",
  "version": "0.0.4",
  "description": "JogabilidadeJS é uma biblioteca javascript não-oficial que se conecta a todo conteúdo e metadado relevante do Jogabilidade.",
  "main": "index.js",
  "types": "src/constants/types.d.ts",
  "dependencies": {
    "@types/lodash": "^4.14.150",
    "@types/xml2js": "^0.4.5",
    "axios": "^0.19.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "rss-parser": "^3.7.6",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "prepare": "npm run build",
  "prepublishOnly": "npm test && npm run lint",
  "preversion": "npm run lint",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "dev": "ts-node src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edmilsonrobson/jogabilidade-js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/edmilsonrobson/jogabilidade-js/issues"
  },
  "homepage": "https://github.com/edmilsonrobson/jogabilidade-js#readme"
}
